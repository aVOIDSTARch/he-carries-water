---
interface Props {
  name: string;
  description: string;
  slug: string;
  language: string | null;
  stars: number;
  topics: string[];
  lastPushed: Date;
  githubUrl: string;
}

const { name, description, slug, language, stars, topics, lastPushed, githubUrl } = Astro.props;
---

<a href={`/dev/${slug}`} class="project-card group block no-underline border-none p-0 m-0">
  <div class="card-inner border-2 border-black bg-white p-6 shadow-custom transition-all hover:translate-x-[4px] hover:translate-y-[4px] hover:shadow-none">
    <div class="flex justify-between items-start mb-4">
      <h3 class="text-2xl font-bold font-mono uppercase m-0 text-black group-hover:text-accent transition-colors">
        {name}
      </h3>
      <div class="flex items-center gap-2 text-sm font-mono text-gray">
        <span class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 16 16">
            <path d="M8 .25a.75.75 0 0 1 .673.418l1.882 3.815 4.21.612a.75.75 0 0 1 .416 1.279l-3.046 2.97.719 4.192a.751.751 0 0 1-1.088.791L8 12.347l-3.766 1.98a.75.75 0 0 1-1.088-.79l.72-4.194L.818 6.374a.75.75 0 0 1 .416-1.28l4.21-.611L7.327.668A.75.75 0 0 1 8 .25Z"/>
          </svg>
          {stars}
        </span>
      </div>
    </div>

    <p class="font-body text-base text-gray-dark mb-4 leading-relaxed line-clamp-2">
      {description || 'No description available'}
    </p>

    <div class="flex flex-wrap gap-2 mb-3">
      {language && (
        <span class="text-xs font-mono px-2 py-1 border border-accent bg-accent/10 text-accent-dark font-bold">
          {language}
        </span>
      )}
      {topics.slice(0, 3).map(topic => (
        <span class="text-xs font-mono px-2 py-1 border border-black bg-gray-light/20 text-black">
          {topic}
        </span>
      ))}
      {topics.length > 3 && (
        <span class="text-xs font-mono px-2 py-1 text-gray">
          +{topics.length - 3} more
        </span>
      )}
    </div>

    <div class="flex items-center justify-between text-xs font-mono text-gray">
      <div class="flex items-center gap-2">
        <span class="text-accent-dark font-bold">&gt;</span>
        <span>updated:</span>
        <time datetime={lastPushed.toISOString()}>
          {lastPushed.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}
        </time>
      </div>
      <a
        href={githubUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center gap-1 hover:text-accent transition-colors"
        onclick="event.stopPropagation()"
      >
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 16 16">
          <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
        </svg>
        GitHub
      </a>
    </div>
  </div>
</a>

<style>
  .project-card {
    display: block;
  }

  .shadow-custom {
    box-shadow: 4px 4px 0px 0px var(--color-black);
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
