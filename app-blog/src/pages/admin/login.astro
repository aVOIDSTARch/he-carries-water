---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
---

<html lang="en">
	<head>
		<BaseHead title="Admin Login" description="Sign in to admin panel" />
	</head>
	<body>
		<Header />
		<main class="w-full max-w-[600px] mx-auto p-4 min-h-screen flex items-center justify-center">
			<div class="w-full">
				<div class="border-4 border-black bg-white p-8 shadow-[8px_8px_0px_0px_black]">
					<h1 class="text-4xl font-mono uppercase font-bold mb-6 text-center">
						Admin Access
					</h1>
					
					<p class="text-center font-mono mb-8 text-gray-dark">
						Sign in with your GitHub account to access the admin panel
					</p>

					<a 
						href="/api/auth/signin?provider=github"
						class="block w-full px-6 py-4 border-2 border-black bg-accent text-white font-mono uppercase font-bold text-lg hover:bg-accent-dark transition-all shadow-[4px_4px_0px_0px_black] hover:translate-x-[4px] hover:translate-y-[4px] hover:shadow-none text-center"
					>
						<span class="flex items-center justify-center gap-3">
							<svg viewBox="0 0 16 16" width="24" height="24" fill="currentColor">
								<path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
							</svg>
							Sign in with GitHub
						</span>
					</a>

					<div class="mt-6 p-4 border-2 border-black bg-yellow-100">
						<p class="text-sm font-mono text-center">
							⚠️ Access restricted to authorized users only
						</p>
					</div>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>
