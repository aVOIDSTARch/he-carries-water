---
import { getSession } from 'auth-astro/server';
import AdminLayout from '../../layouts/AdminLayout.astro';

const session = await getSession(Astro.request);

// Redirect to login if not authenticated
if (!session) {
  return Astro.redirect('/admin/login');
}
---

<AdminLayout title="Manage Projects">
  <div class="space-y-6">
    <!-- Header -->
    <div class="border-2 border-black bg-accent/10 p-6 shadow-custom">
      <h1 class="text-3xl font-mono uppercase font-bold mb-2">
        GitHub Projects
      </h1>
      <p class="font-mono text-gray-dark">
        Select which repositories to showcase on your dev page
      </p>
    </div>

    <!-- Status Bar -->
    <div class="border-2 border-black bg-white p-4 shadow-custom">
      <div class="flex flex-wrap gap-4 items-center justify-between">
        <div class="flex flex-wrap gap-4 text-sm font-mono">
          <span>
            Last Scanned: <span id="last-scanned" class="text-accent-dark font-bold">Loading...</span>
          </span>
          <span>
            Last Synced: <span id="last-synced" class="text-accent-dark font-bold">Loading...</span>
          </span>
          <span>
            Selected: <span id="selected-count" class="text-accent-dark font-bold">0</span>
          </span>
        </div>
        <div class="flex gap-2">
          <button
            id="settings-btn"
            class="px-3 py-2 border-2 border-black bg-gray-100 text-black font-mono hover:bg-gray-200 transition-all shadow-[2px_2px_0px_0px_black] hover:translate-x-[2px] hover:translate-y-[2px] hover:shadow-none"
            title="GitHub Settings"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </button>
          <button
            id="save-btn"
            class="px-4 py-2 border-2 border-black bg-accent text-white font-mono uppercase font-bold hover:bg-accent-dark transition-all shadow-[2px_2px_0px_0px_black] hover:translate-x-[2px] hover:translate-y-[2px] hover:shadow-none disabled:opacity-50 disabled:cursor-not-allowed"
            disabled
          >
            Save Selection
          </button>
          <button
            id="sync-btn"
            class="px-4 py-2 border-2 border-black bg-green-600 text-white font-mono uppercase font-bold hover:bg-green-700 transition-all shadow-[2px_2px_0px_0px_black] hover:translate-x-[2px] hover:translate-y-[2px] hover:shadow-none disabled:opacity-50 disabled:cursor-not-allowed"
            disabled
          >
            Sync Now
          </button>
        </div>
      </div>
    </div>

    <!-- Loading State -->
    <div id="loading" class="border-2 border-black bg-white p-8 shadow-custom text-center">
      <div class="font-mono text-lg animate-pulse">
        <span class="text-accent-dark">&gt;</span> Fetching repositories from GitHub...
      </div>
    </div>

    <!-- Error State -->
    <div id="error" class="hidden border-2 border-black bg-red-100 p-6 shadow-custom">
      <h3 class="font-mono font-bold text-red-700 mb-2">Error Loading Repositories</h3>
      <p id="error-message" class="font-mono text-sm text-red-600"></p>
      <button
        id="retry-btn"
        class="mt-4 px-4 py-2 border-2 border-black bg-white font-mono uppercase hover:bg-gray-100 transition-all"
      >
        Retry
      </button>
    </div>

    <!-- Repository List -->
    <div id="repo-list" class="hidden space-y-3">
      <!-- Repos will be inserted here -->
    </div>

    <!-- Empty State -->
    <div id="empty" class="hidden border-2 border-black bg-white p-8 shadow-custom text-center">
      <p class="font-mono text-gray-dark">No repositories found.</p>
    </div>
  </div>

  <!-- Settings Modal -->
  <div id="settings-modal" class="hidden fixed inset-0 z-50">
    <!-- Backdrop -->
    <div id="modal-backdrop" class="absolute inset-0 bg-black/50"></div>

    <!-- Modal Content -->
    <div class="absolute inset-0 flex items-center justify-center p-4">
      <div class="border-4 border-black bg-white shadow-[8px_8px_0px_0px_black] w-full max-w-md">
        <!-- Modal Header -->
        <div class="border-b-2 border-black bg-accent/10 p-4 flex items-center justify-between">
          <h2 class="text-xl font-mono uppercase font-bold">GitHub Settings</h2>
          <button id="close-modal-btn" class="text-2xl font-bold hover:text-accent transition-colors">&times;</button>
        </div>

        <!-- Modal Body -->
        <form id="settings-form" class="p-6 space-y-4">
          <div>
            <label for="github-username" class="block font-mono text-sm uppercase font-bold mb-2">
              GitHub Username <span class="text-accent">*</span>
            </label>
            <input
              type="text"
              id="github-username"
              name="githubUsername"
              required
              class="w-full px-4 py-2 border-2 border-black font-mono focus:outline-none focus:ring-2 focus:ring-accent"
              placeholder="your-username"
            />
            <p class="text-xs font-mono text-gray mt-1">The GitHub account to fetch repositories from</p>
          </div>

          <div>
            <label for="github-token" class="block font-mono text-sm uppercase font-bold mb-2">
              GitHub Token
            </label>
            <div class="relative">
              <input
                type="password"
                id="github-token"
                name="githubToken"
                class="w-full px-4 py-2 pr-12 border-2 border-black font-mono focus:outline-none focus:ring-2 focus:ring-accent"
                placeholder="Leave empty to keep current token"
              />
              <button
                type="button"
                id="toggle-token-btn"
                class="absolute right-2 top-1/2 -translate-y-1/2 p-1 text-gray hover:text-black transition-colors"
                title="Toggle visibility"
              >
                <svg id="eye-icon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                </svg>
              </button>
            </div>
            <p id="current-token-status" class="text-xs font-mono text-gray-dark mt-1"></p>
          </div>

          <!-- Instructions -->
          <details class="border-2 border-black bg-gray-50">
            <summary class="px-4 py-2 font-mono text-sm uppercase font-bold cursor-pointer hover:bg-gray-100 transition-colors">
              How to create a GitHub token
            </summary>
            <div class="px-4 py-3 border-t-2 border-black text-xs font-mono space-y-2">
              <ol class="list-decimal list-inside space-y-1 text-gray-dark">
                <li>Go to <a href="https://github.com/settings/tokens" target="_blank" rel="noopener" class="text-accent hover:underline">GitHub Settings ‚Üí Tokens</a></li>
                <li>Click <strong>"Generate new token (classic)"</strong></li>
                <li>Give it a name (e.g., "hecarrieswater sync")</li>
                <li>Select scope: <code class="bg-white px-1 border border-black">public_repo</code> (read-only)</li>
                <li>Click <strong>"Generate token"</strong></li>
                <li>Copy the token and paste it above</li>
              </ol>
              <p class="text-gray pt-2 border-t border-gray-300">
                <strong>Why use a token?</strong> Without one, GitHub limits you to 60 API requests/hour. With a token, you get 5,000 requests/hour.
              </p>
              <p class="text-gray">
                <strong>Note:</strong> After saving, restart the dev server for changes to take effect.
              </p>
            </div>
          </details>

          <div id="settings-error" class="hidden border-2 border-red-500 bg-red-50 p-3 text-sm font-mono text-red-700"></div>
          <div id="settings-success" class="hidden border-2 border-green-500 bg-green-50 p-3 text-sm font-mono text-green-700"></div>

          <!-- Modal Footer -->
          <div class="flex gap-3 pt-4 border-t-2 border-black">
            <button
              type="button"
              id="cancel-modal-btn"
              class="flex-1 px-4 py-2 border-2 border-black bg-white font-mono uppercase font-bold hover:bg-gray-100 transition-all"
            >
              Cancel
            </button>
            <button
              type="submit"
              id="save-settings-btn"
              class="flex-1 px-4 py-2 border-2 border-black bg-accent text-white font-mono uppercase font-bold hover:bg-accent-dark transition-all shadow-[2px_2px_0px_0px_black] hover:translate-x-[2px] hover:translate-y-[2px] hover:shadow-none"
            >
              Save Settings
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</AdminLayout>

<script>
  interface RepoData {
    id: number;
    name: string;
    fullName: string;
    description: string;
    url: string;
    stars: number;
    forks: number;
    language: string | null;
    topics: string[];
    pushedAt: string;
    isArchived: boolean;
    isFork: boolean;
    isNew: boolean;
    isSelected: boolean;
    owner: string;
  }

  interface ApiResponse {
    repos: RepoData[];
    lastScannedAt: string | null;
    lastSyncedAt: string | null;
    totalRepos: number;
    newRepos: number;
    selectedCount: number;
    error?: string;
    message?: string;
  }

  let repos: RepoData[] = [];
  let selectedRepos: Set<string> = new Set();
  let hasChanges = false;

  const loadingEl = document.getElementById('loading')!;
  const errorEl = document.getElementById('error')!;
  const errorMessageEl = document.getElementById('error-message')!;
  const repoListEl = document.getElementById('repo-list')!;
  const emptyEl = document.getElementById('empty')!;
  const saveBtn = document.getElementById('save-btn') as HTMLButtonElement;
  const syncBtn = document.getElementById('sync-btn') as HTMLButtonElement;
  const retryBtn = document.getElementById('retry-btn')!;
  const lastScannedEl = document.getElementById('last-scanned')!;
  const lastSyncedEl = document.getElementById('last-synced')!;
  const selectedCountEl = document.getElementById('selected-count')!;

  function formatDate(dateStr: string | null): string {
    if (!dateStr) return 'Never';
    const date = new Date(dateStr);
    return date.toLocaleString('en-US', {
      month: 'short',
      day: 'numeric',
      hour: '2-digit',
      minute: '2-digit',
    });
  }

  function updateSelectedCount() {
    selectedCountEl.textContent = selectedRepos.size.toString();
    saveBtn.disabled = !hasChanges;
    syncBtn.disabled = selectedRepos.size === 0;
  }

  function renderRepos() {
    if (repos.length === 0) {
      repoListEl.classList.add('hidden');
      emptyEl.classList.remove('hidden');
      return;
    }

    emptyEl.classList.add('hidden');
    repoListEl.classList.remove('hidden');

    // Sort: new first, then selected, then by stars
    const sortedRepos = [...repos].sort((a, b) => {
      if (a.isNew !== b.isNew) return a.isNew ? -1 : 1;
      if (a.isSelected !== b.isSelected) return a.isSelected ? -1 : 1;
      return b.stars - a.stars;
    });

    repoListEl.innerHTML = sortedRepos.map(repo => `
      <div class="border-2 border-black bg-white shadow-[2px_2px_0px_0px_black] overflow-hidden ${repo.isNew ? 'ring-2 ring-yellow-400' : ''}">
        <label class="flex items-start gap-4 p-4 cursor-pointer hover:bg-gray-50 transition-colors">
          <input
            type="checkbox"
            name="repo"
            value="${repo.name}"
            data-owner="${repo.owner}"
            ${selectedRepos.has(repo.name) ? 'checked' : ''}
            class="mt-1 w-5 h-5 border-2 border-black accent-accent cursor-pointer"
          />
          <div class="flex-1 min-w-0">
            <div class="flex items-center gap-2 flex-wrap">
              <h3 class="font-mono font-bold text-lg">${repo.name}</h3>
              ${repo.isNew ? '<span class="px-2 py-0.5 bg-yellow-300 border border-black text-xs font-mono uppercase font-bold">NEW</span>' : ''}
              ${repo.isArchived ? '<span class="px-2 py-0.5 bg-gray-300 border border-black text-xs font-mono uppercase">Archived</span>' : ''}
              ${repo.isFork ? '<span class="px-2 py-0.5 bg-blue-100 border border-black text-xs font-mono uppercase">Fork</span>' : ''}
            </div>
            <p class="font-mono text-sm text-gray-dark mt-1 line-clamp-2">${repo.description || 'No description'}</p>
            <div class="flex flex-wrap gap-3 mt-2 text-xs font-mono text-gray">
              ${repo.language ? `<span class="flex items-center gap-1"><span class="w-3 h-3 rounded-full bg-accent"></span>${repo.language}</span>` : ''}
              <span>‚òÖ ${repo.stars}</span>
              <span>üç¥ ${repo.forks}</span>
              <span>Updated: ${formatDate(repo.pushedAt)}</span>
            </div>
            ${repo.topics.length > 0 ? `
              <div class="flex flex-wrap gap-1 mt-2">
                ${repo.topics.slice(0, 5).map(t => `<span class="px-1.5 py-0.5 bg-accent/10 border border-accent text-xs font-mono">${t}</span>`).join('')}
                ${repo.topics.length > 5 ? `<span class="text-xs font-mono text-gray">+${repo.topics.length - 5} more</span>` : ''}
              </div>
            ` : ''}
          </div>
          <a
            href="${repo.url}"
            target="_blank"
            rel="noopener noreferrer"
            class="px-2 py-1 border border-black text-xs font-mono hover:bg-black hover:text-white transition-colors"
            onclick="event.stopPropagation()"
          >
            View ‚Üí
          </a>
        </label>
      </div>
    `).join('');

    // Add change listeners
    repoListEl.querySelectorAll('input[type="checkbox"]').forEach(checkbox => {
      checkbox.addEventListener('change', (e) => {
        const target = e.target as HTMLInputElement;
        if (target.checked) {
          selectedRepos.add(target.value);
        } else {
          selectedRepos.delete(target.value);
        }
        hasChanges = true;
        updateSelectedCount();
      });
    });
  }

  async function loadRepos() {
    loadingEl.classList.remove('hidden');
    errorEl.classList.add('hidden');
    repoListEl.classList.add('hidden');
    emptyEl.classList.add('hidden');

    try {
      const response = await fetch('/api/projects/list-repos');
      const data: ApiResponse = await response.json();

      if (!response.ok) {
        throw new Error(data.message || data.error || 'Failed to load repositories');
      }

      repos = data.repos;
      selectedRepos = new Set(repos.filter(r => r.isSelected).map(r => r.name));
      hasChanges = false;

      lastScannedEl.textContent = formatDate(data.lastScannedAt);
      lastSyncedEl.textContent = formatDate(data.lastSyncedAt);

      loadingEl.classList.add('hidden');
      renderRepos();
      updateSelectedCount();
    } catch (error) {
      loadingEl.classList.add('hidden');
      errorEl.classList.remove('hidden');
      errorMessageEl.textContent = error instanceof Error ? error.message : 'Unknown error';
    }
  }

  async function saveSelection() {
    saveBtn.disabled = true;
    saveBtn.textContent = 'Saving...';

    try {
      const selectedArray = repos
        .filter(r => selectedRepos.has(r.name))
        .map((r, i) => ({
          owner: r.owner,
          repo: r.name,
          order: i,
        }));

      const response = await fetch('/api/projects/save-config', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ selectedRepos: selectedArray }),
      });

      const data = await response.json();

      if (!response.ok) {
        throw new Error(data.message || 'Failed to save');
      }

      hasChanges = false;
      saveBtn.textContent = 'Saved!';
      setTimeout(() => {
        saveBtn.textContent = 'Save Selection';
        updateSelectedCount();
      }, 2000);
    } catch (error) {
      saveBtn.textContent = 'Error!';
      setTimeout(() => {
        saveBtn.textContent = 'Save Selection';
        saveBtn.disabled = false;
      }, 2000);
      console.error('Save error:', error);
    }
  }

  async function syncProjects() {
    syncBtn.disabled = true;
    syncBtn.textContent = 'Syncing...';

    try {
      const response = await fetch('/api/projects/sync', {
        method: 'POST',
      });

      const data = await response.json();

      if (!response.ok) {
        throw new Error(data.message || 'Failed to sync');
      }

      lastSyncedEl.textContent = formatDate(data.lastSyncedAt);
      syncBtn.textContent = `Synced ${data.synced}!`;
      setTimeout(() => {
        syncBtn.textContent = 'Sync Now';
        syncBtn.disabled = selectedRepos.size === 0;
      }, 2000);
    } catch (error) {
      syncBtn.textContent = 'Error!';
      setTimeout(() => {
        syncBtn.textContent = 'Sync Now';
        syncBtn.disabled = false;
      }, 2000);
      console.error('Sync error:', error);
    }
  }

  // Settings modal elements
  const settingsBtn = document.getElementById('settings-btn')!;
  const settingsModal = document.getElementById('settings-modal')!;
  const modalBackdrop = document.getElementById('modal-backdrop')!;
  const closeModalBtn = document.getElementById('close-modal-btn')!;
  const cancelModalBtn = document.getElementById('cancel-modal-btn')!;
  const settingsForm = document.getElementById('settings-form') as HTMLFormElement;
  const githubUsernameInput = document.getElementById('github-username') as HTMLInputElement;
  const githubTokenInput = document.getElementById('github-token') as HTMLInputElement;
  const toggleTokenBtn = document.getElementById('toggle-token-btn')!;
  const currentTokenStatus = document.getElementById('current-token-status')!;
  const settingsError = document.getElementById('settings-error')!;
  const settingsSuccess = document.getElementById('settings-success')!;
  const saveSettingsBtn = document.getElementById('save-settings-btn') as HTMLButtonElement;

  function openModal() {
    settingsModal.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
    loadCurrentSettings();
  }

  function closeModal() {
    settingsModal.classList.add('hidden');
    document.body.style.overflow = '';
    settingsError.classList.add('hidden');
    settingsSuccess.classList.add('hidden');
    githubTokenInput.value = '';
  }

  async function loadCurrentSettings() {
    try {
      const response = await fetch('/api/projects/save-credentials');
      const data = await response.json();

      if (response.ok) {
        githubUsernameInput.value = data.githubUsername || '';
        if (data.hasToken) {
          currentTokenStatus.textContent = `Current token: ${data.maskedToken}`;
        } else {
          currentTokenStatus.textContent = 'No token configured';
        }
      }
    } catch (error) {
      console.error('Error loading settings:', error);
    }
  }

  async function saveSettings(e: Event) {
    e.preventDefault();
    saveSettingsBtn.disabled = true;
    saveSettingsBtn.textContent = 'Saving...';
    settingsError.classList.add('hidden');
    settingsSuccess.classList.add('hidden');

    try {
      const response = await fetch('/api/projects/save-credentials', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          githubUsername: githubUsernameInput.value.trim(),
          githubToken: githubTokenInput.value.trim() || undefined,
        }),
      });

      const data = await response.json();

      if (!response.ok) {
        throw new Error(data.message || data.error || 'Failed to save settings');
      }

      settingsSuccess.textContent = data.message;
      settingsSuccess.classList.remove('hidden');
      githubTokenInput.value = '';

      // Reload settings to show updated token status
      await loadCurrentSettings();

      setTimeout(() => {
        saveSettingsBtn.textContent = 'Save Settings';
        saveSettingsBtn.disabled = false;
      }, 2000);
    } catch (error) {
      settingsError.textContent = error instanceof Error ? error.message : 'Unknown error';
      settingsError.classList.remove('hidden');
      saveSettingsBtn.textContent = 'Save Settings';
      saveSettingsBtn.disabled = false;
    }
  }

  function toggleTokenVisibility() {
    const isPassword = githubTokenInput.type === 'password';
    githubTokenInput.type = isPassword ? 'text' : 'password';
  }

  // Event listeners
  saveBtn.addEventListener('click', saveSelection);
  syncBtn.addEventListener('click', syncProjects);
  retryBtn.addEventListener('click', loadRepos);

  // Modal event listeners
  settingsBtn.addEventListener('click', openModal);
  closeModalBtn.addEventListener('click', closeModal);
  cancelModalBtn.addEventListener('click', closeModal);
  modalBackdrop.addEventListener('click', closeModal);
  settingsForm.addEventListener('submit', saveSettings);
  toggleTokenBtn.addEventListener('click', toggleTokenVisibility);

  // Close modal on Escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && !settingsModal.classList.contains('hidden')) {
      closeModal();
    }
  });

  // Initial load
  loadRepos();
</script>

<style>
  .shadow-custom {
    box-shadow: 4px 4px 0px 0px var(--color-black);
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
